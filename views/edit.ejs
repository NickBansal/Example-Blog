<% include ./partials/header %>



<div class="container boxed">
    <form class="ui form" action="/sun/<%= foundBlog._id %>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" value="<%= foundBlog.title %>">
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="blog[image]" value="<%= foundBlog.image %>">
        </div>
        <div class="field">
            <label>Body</label>
            <input type="text" name="blog[body]" value="<%= foundBlog.body %>">
        </div>
        <div class="field">
            <label>Author</label>
            <input type="text" name="blog[author]" value="<%= foundBlog.author %>">
        </div>
        <div class="field">
            <label>Submit</label>
            <input class="ui big teal basic button" type="submit">    
        </div>
    </form>
</div>

<% include ./partials/footer %>